.flex{
    text-align: center;
    height: 80rpx;
    padding: 15rpx 0rpx;
    border-bottom: 1rpx solid #b2b2b2;
    color: #b2b2b2;
}
.num{
    font-size: 40rpx;
    font-weight: 700;
}
.text{
    font-size: 20rpx;
}
.orderBox{
    margin: 30rpx;
    margin-bottom: 0rpx;
    border: 1rpx solid #000;
}
.title{
    display: flex;
    justify-content:space-between;
    padding: 30rpx 0rpx;
    margin: 0rpx 20rpx;
    border-bottom: 1rpx solid #f2f2f2;
    height: 30rpx;
    font-size: 16px;
    position: relative;
}
.productBox{
    font-size: 12px;
    color: #646464;
    margin: 0rpx 20rpx;
    padding:20rpx 0rpx;
    display: flex;
    border-bottom: 1rpx solid #f2f2f2;
}
.image{
    height: 140rpx;
    width: 140rpx;  
}
.productMes{
    width: 75%;
    padding: 0rpx 20rpx;
    padding-right: 0rpx;
}
.price{
    display: flex;
    justify-content: space-between;
}
.pink{
    color: #000;
    margin-bottom:-8px;
    border-bottom:4rpx solid #000;
}
.orderBanner{
    height:90rpx;
    line-height: 90rpx;
    font-size: 25rpx;
    padding: 0rpx 20rpx;
}
.avatarSmall{
    position: absolute;
    top: 22rpx;
    height: 50rpx;
    width: 50rpx;
}