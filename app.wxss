/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
} 
.containerRow{
    display: flex;
    flex-direction: row;
    align-items: center;
}
.avatar{
    border-radius: 100%;
    height: 80rpx;
    width: 80rpx;
}
.avatarSmall{
    border-radius: 100%;
    height: 60rpx;
    width: 60rpx;
}
.avatarBig{
    border-radius: 100%;
    height: 120rpx;
    width: 120rpx;
    margin-top: 30rpx;
    margin-left: 30rpx;
}
.clearfix:after { 
    content: "." ; 
    display: block ;
    height: 0 ;
    clear: both ;
    visibility: hidden ;
}
.clearfix{
    position: relative;
}
.oneLine{
    display:block;
    white-space:nowrap;
    overflow:hidden; 
    text-overflow:ellipsis;
}
.flex{
    display:flex;
}
.between{
    justify-content: space-between;
}
.arrowRight{
    height: 40rpx;
    width: 30rpx;
    background: white;
    float: right;
    margin-top: -66.5rpx;
    margin-right: 30rpx;
}
.button{
    height: 100rpx;
    background: #ff2e6b;
    line-height: 100rpx;
    text-align: center;
    position: fixed;
    bottom: 0rpx;
    width: 100%;
    color: white;
}
